<div id="tan-main">
    <div class="row">
        <div class="col-lg-4">
            <h1 class="page-header">Temporal Association Network</h1>
        </div>
        <div class="form-inline" role="form">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon" id="tcr-prefix-url">ws://</div>
                    <input id="tan-input-url" type="text" class="form-control my-form" placeholder="url" onkeydown="">
                </div>
                <div class="input-group">
                    <button class="btn btn-default" id="tan-upload-button" onclick="tcr_load($('#tcr-input-url').val())">Load</button>
                </div>
            </div>
        </div>

    </div>
    <div>
        <style type="text/css">
            #tan-graph-container {
                margin: auto;
                border: 1px solid;
            }
        </style>
        <div id="tan-graph-container">

        </div>
        <script>
            sigma.parsers.json('data/tan-graph-data.json', {
                container: 'tan-graph-container',
                settings: {
                    defaultNodeColor: '#ec5148'
                }
            });
        </script>

    </div>

    <script>
        /* CSS dynamic styles*/
        $(function (){
            var headerHeight = $("#upper-navbar").outerHeight();
            $("#"+MAIN_DIV).css('height','calc(100vh - '+headerHeight+'px - 1px)')
            $("#"+MAIN_DIV).css('width','100vw');// - '+($("#"+MAIN_DIV).offset().top+$("#"+MAIN_DIV).position().top)+'px)')
            $("#tan-graph-container").css('height','calc(100% - '+$("#tan-graph-container").position().top+'px)');
        })

        $(function(){
            if (GLOBAL_DEBUG) {
                tcr_load("http://localhost:1337")
            }
        })
    </script>
</div>